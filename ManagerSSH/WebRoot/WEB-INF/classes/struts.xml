<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

	<constant name="struts.devMode" value="false" />
	<constant name="struts.i18n.encoding" value="UTF-8" />
	<constant name="struts.configuration.xml.reload" value="true" />


	<package name="base" namespace="/" extends="struts-default">
		<global-results>
			<result name="ajax">/ajax.jsp</result>
			<result name="nopower">/index.jsp</result>
			<result name="noLogin">/login.jsp</result>
		</global-results>
	</package>
	<package name="manager" extends="base">
		<action name="login" class="action.LoginAction">
			<result name="ok">/welcome.jsp</result>
			<result name="fail">/index.jsp</result>
			<result name="admin" type="chain">person_view</result>
		</action>
		<action name="person_*" method="{1}" class="action.PersonAction">
			<result name="mymsg">/welcome.jsp</result>
			<result name="manager">/admin_manager.jsp</result>
			<result name="registerOk">/welcome.jsp</result>
			<result name="registerFalse">/register.jsp</result>
		</action>
		
	</package>

</struts>
